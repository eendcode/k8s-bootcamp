FROM debian:stable-slim

LABEL maintainer "andy"

ENV SLEEP_TIME "3600"

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install --yes \
    curl \
    keyutils \
    kubectl \
    sudo

COPY build/pod.yaml /pod.yaml

RUN useradd -m andy

RUN echo "andy ALL=(ALL) NOPASSWD: ALL" >> "/etc/sudoers"

CMD ["/bin/bash", "-c", "sleep $SLEEP_TIME"]













